CC = c++   
FLAGS = -Wall -Werror -Wextra
98 = -std=c++98
SRCS = tester.cpp request_parser.cpp request_line.cpp headers.cpp body.cpp ../utils/utils.cpp
HEADER = request_parser.hpp
NAME = tester

all: $(NAME)

$(NAME): $(SRCS)
	@$(CC) $(FLAGS) $(98) -o $@ $(SRCS)
	
clean:

fclean: clean
	rm -f $(NAME)

re: fclean all